<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aarshad.nanoapp.LocationServices">


    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        class="com.google.android.gms.maps.SupportMapFragment" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="7dp"
        >
        <Button
            android:id="@+id/btnSendLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Sending Locations"
            android:visibility="invisible"
            android:onClick="startSendLocations"
            />
        <Button
            android:id="@+id/btnStopLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stop"
            android:visibility="invisible"
            android:onClick="stopSendLocations"
            />
    </LinearLayout>



</RelativeLayout>
